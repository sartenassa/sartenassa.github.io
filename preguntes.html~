var i=0;
var turno=0;
var turnoest=0;

function aleatorio() {

document.getElementById("acierta").style.backgroundSize = "auto";
document.getElementById("acierta").style.backgroundImage="";
document.getElementById("nexti").style.visibility="hidden";
document.getElementById("aplaude").src ="";

document.getElementById("acierta").innerHTML=preguntes[0];
document.getElementById("invisible2").innerHTML=preguntes[0];

var nom=respostes[0][0];
var nom2=respostes[0][1];
var nom3=respostes[0][2];
document.getElementById("invisible").innerHTML = nom;
var orde = Math.floor((Math.random() * 5) + 1);
if(orde==1){
document.getElementById("link1").innerHTML = nom;
document.getElementById("link2").innerHTML = nom2;
document.getElementById("link3").innerHTML = nom3;
}
if(orde==2){

document.getElementById("link1").innerHTML = nom2;
document.getElementById("link2").innerHTML = nom;
document.getElementById("link3").innerHTML = nom3;
}
if(orde==3){
document.getElementById("link1").innerHTML = nom3;
document.getElementById("link2").innerHTML = nom2;
document.getElementById("link3").innerHTML = nom;
}
if(orde==4){
document.getElementById("link1").innerHTML = nom2;
document.getElementById("link2").innerHTML = nom;
document.getElementById("link3").innerHTML = nom3;
}
if(orde==5){
document.getElementById("link1").innerHTML = nom3;
document.getElementById("link2").innerHTML = nom2;
document.getElementById("link3").innerHTML = nom;
}

}


function aleatorio2() {
document.getElementById("acierta").style.backgroundImage="";
document.getElementById("acierta").style.backgroundSize = "auto";
document.getElementById("nexti").style.visibility="hidden";
document.getElementById("aplaude").src ="";

for (i = 0; i < preguntes.length; i++) {
if(document.getElementById("invisible2").innerHTML==preguntes[i]){
turno=i+1;
}
}


if(turno==preguntes.length){
turno=0;

}


document.getElementById("acierta").innerHTML=preguntes[turno];
document.getElementById("invisible2").innerHTML=preguntes[turno];

var nom=respostes[turno][0];
var nom2=respostes[turno][1];
var nom3=respostes[turno][2];
document.getElementById("invisible").innerHTML = nom;
var orde = Math.floor((Math.random() * 3) + 1);
if(orde==1){
document.getElementById("link1").innerHTML = nom;
document.getElementById("link2").innerHTML = nom2;
document.getElementById("link3").innerHTML = nom3;
}
if(orde==2){
document.getElementById("link1").innerHTML = nom2;
document.getElementById("link2").innerHTML = nom;
document.getElementById("link3").innerHTML = nom3;
}
if(orde==3){
document.getElementById("link1").innerHTML = nom3;
document.getElementById("link2").innerHTML = nom2;
document.getElementById("link3").innerHTML = nom;
}

}


function adivina(e) {

if(document.getElementById(e.id).innerHTML == document.getElementById("invisible").innerHTML){
document.getElementById("invisible2").innerHTML=document.getElementById("acierta").innerHTML;

var imatge= Math.floor((Math.random() * 7) + 1);
if(imatge==1){
document.getElementById("acierta").style.backgroundImage="url('yes.gif')";
}
if(imatge==2){
document.getElementById("acierta").style.backgroundImage="url('yes2.gif')";
}
if(imatge==3){
document.getElementById("acierta").style.backgroundImage="url('yes1.gif')";
}
if(imatge==4){
document.getElementById("acierta").style.backgroundImage="url('yes3.gif')";
}
if(imatge==5){
document.getElementById("acierta").style.backgroundImage="url('yes4.gif')";
}
if(imatge==6){
document.getElementById("acierta").style.backgroundImage="url('yes5.gif')";
}
if(imatge==7){
document.getElementById("acierta").style.backgroundImage="url('yes6.gif')";
}

turnoest=turno+1;

var est="estrella"+ turnoest;
document.getElementById(est).style.opacity=1;
//document.getElementById('estrella3').style.opacity=1;
document.getElementById("acierta").style.backgroundRepeat = "no-repeat";
document.getElementById("acierta").style.backgroundSize = "auto";

document.getElementById("nexti").style.visibility="visible";
document.getElementById("aplaude").src ="aplaude.mp3";

}else{


var imatgeErr= Math.floor((Math.random() * 7) + 1);
if(imatgeErr==1){
document.getElementById("acierta").style.backgroundImage="url('no.gif')";
}
if(imatgeErr==2){
document.getElementById("acierta").style.backgroundImage="url('no1.gif')";
}
if(imatgeErr==3){
document.getElementById("acierta").style.backgroundImage="url('no2.gif')";
}
if(imatgeErr==4){
document.getElementById("acierta").style.backgroundImage="url('no3.gif')";
}
if(imatgeErr==5){
document.getElementById("acierta").style.backgroundImage="url('no4.gif')";
}
if(imatgeErr==6){
document.getElementById("acierta").style.backgroundImage="url('no5.gif')";
}
if(imatgeErr==7){
document.getElementById("acierta").style.backgroundImage="url('no6.gif')";
}


document.getElementById("acierta").style.backgroundRepeat = "no-repeat";
//document.getElementById("acierta").style.backgroundSize = "65%";
}   
}
